<div class="container">
	<h1 class="text-center">View Product</h1>
</div>

<div class="container">
	<table class="table table-stripped table-hover table-bordered">

	<tr>
		<th>S.No</th>
		<th>Product Name</th>
		<th>Product Price</th>
		<th>Product Category</th>
		<th>Product Detail</th>
		<th>Discount</th>
		<th>Product Image</th>
		<th>View</th>
		<th>Delete</th>
	</tr>

	<%data.forEach(function(x,i){%>

	<tr>
		<td> <%=i+1%> </td>
		<td> <%=x.productname%> </td>
		<td> <%=x.productprice%> </td>
		<td> <%=x.productcategory%> </td>
		<td> <%=x.productdetail%> </td>
		<td> <%=x.discount%> </td>
	<td><img src="/product_image/<%=x.image%>" height="70" width="70"> </td>

		<td><a href="admin_view_product/edit/<%= x._id %>" class="btn btn-primary">View/Update</a></td>

		<!-- <td><a href="admin_view_product/delete?id=<%= x._id %>" class="btn btn-danger">Delete</a></td> -->

		<td><a href="admin_view_product/delete/<%= x._id %>" class="btn btn-danger">Delete</a></td>
	</tr>

<%})%> 
	
	</table>
<!-- MODAL 1 -->
	<div class="modal fade" id="viewModal">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal">&times;</button>
     <h4 class="modal-title">View/Edit</h4>
</div>

<div class="modal-body">
	
</div>
</div>

</div>
</div>


<!-- MODAL 2 -->


<div class="modal fade" id="delModal">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
     <h3 class="modal-title">Do you really want to delete this category???</h3>
</div>

<div class="modal-body">
 <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
 <button type="button" class="btn btn-warning" data-dismiss="modal">Delete</button>
</div>
</div>

</div>
</div>


	</div>

