<div class="container">
	<h1 class="text-center">View Category</h1>
</div>

<div class="container">
	<table class="table table-stripped table-hover table-bordered">

	<tr>
		<th>S.no</th>
		<th>Category</th>
		<th>View</th>
		<th>Delete</th>
	</tr>

<%data.forEach(function(x,i){%>

	<tr>
		<td> <%=i+1%> </td>
		<td> <%=x.category%> </td>
		<td><a href="admin_view_category/edit/<%=x._id%>" class="btn btn-primary" >View/Update</a></td>
		<td><a href="admin_view_category/delete/<%=x._id%>" class="btn btn-danger">Delete</a></td>
	</tr>

<%})%> 
	</table>

<div class="modal fade" id="viewModal">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal">&times;</button>
     <h4 class="modal-title">View/Edit</h4>
</div>

<div class="modal-body">
	
</div>
</div>

</div>
</div>


<div class="modal fade" id="delModal">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
     <h3 class="modal-title">Do you really want to delete this category???</h3>
</div>

<div class="modal-body">
 <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
 <button type="button" class="btn btn-warning" data-dismiss="modal">Delete</button>
</div>
</div>

</div>
</div>


</div>